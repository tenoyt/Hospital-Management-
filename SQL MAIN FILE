CREATE TABLE ROOM(
	ROOM_ID INT PRIMARY KEY,
	BED_ID INT NOT NULL,
	PATIENT_ID INT,
	ROOM_NUMBER VARCHAR(10) NOT NULL,
	ROOM_TYPE VARCHAR(25) NOT NULL,
	OCCUPANCY_STATUS VARCHAR(50) NOT NULL,
	FOREIGN KEY(PATIENT_ID) REFERENCES PATIENT(PATIENT_ID)
);

