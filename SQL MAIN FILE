create database project;
use project;
CREATE TABLE COST_CENTRE(
	COST_CENTRE_ID CHAR(10) PRIMARY KEY,
	ITEM_NAME VARCHAR(50) NOT NULL,
	ITEM_DESCRIPTION VARCHAR(100) NOT NULL,
	ITEM_COST DECIMAL(10,2) NOT NULL
);

